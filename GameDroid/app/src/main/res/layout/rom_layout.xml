<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RadioButton
        android:id="@+id/most_recent_radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="recent_radio"
        android:layout_gravity="center"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/most_recent_image"
        android:src="@mipmap/ic_launcher"
        android:layout_gravity="center"/>

    <!-- Contains ROM title and last played time -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rom_info"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rom_title"
            android:text="Sample Title"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/last_played"
            android:text="The last played date of a ROM file."/>

    </LinearLayout>

</LinearLayout>
